@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <style>
        .btn {
            background-color: #ddd;
            width: 100%;
            height: 70px;
            color: #555;
            border: none;
            font-size: 30px;
            font-family: Consolas;
            outline: none;
        }

        .op {
            background-color: #bbb;
        }

        #titulo {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #5c758a;
            font-size: 30px;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        #main {
            align-content: center;
            text-align: center;
            width: 400px;
            background-color: #fbfbfb;
            margin: 0 auto;
            border: 1px solid #bbb;
            border-radius: 8px;
            height: 500px;
        }

        #tabela {
            margin: 0 auto;
            margin-bottom: 10px
        }

        #visor {
            width: 300px;
            height: 60px;
            border: 2px solid #bbb;
            text-align: right;
            margin-bottom: 50px;
            margin-top: 10px;
            font-size: 40px;
            overflow-x:auto;
        }

        #btnig {
            height: 144px;
            background-color: #888;
            color: #ddd;
        }

        #btnig:hover {
            background-color: #ddd;
            color: #666;
        }

        #btnig:active {
            background-color: #5c758a;
            color: #ddd;
        }

        #mm {
            font-size: 17px;
        }

        .btn:hover {
            background-color: #555;
            color: #ddd;
        }

        .btn:active {
            background-color: #5c758a;
        }

    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Calculadora</title>
</head>
<body>
    <div id="main">
        <h1 id="titulo">Calculadora Completa</h1>
        <!--objeto para devolver o conteudo da calculadora
            do browser para o servidor-->
        <!--esta linha de comentario e vista no browser-->
        @*mas esta nao...*@
        <form method="post">

            <table id="tabela">
                <tr>
                    <td colspan="5">
                        <input type="text" value="@ViewBag.Visor" name="visor" id ="visor"  readonly />
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" class="btn" value="7" name="bt" />
                    </td>
                    <td>
                        <input type="submit" class="btn" value="8" name="bt" />
                    </td>
                    <td>
                        <input type="submit" class="btn" value="9" name="bt" />
                    </td>
                    <td>
                        <input type="submit" class="btn op" value=":" name="bt" />
                    </td>
                    <td>
                        <input type="submit" id="mm" class="btn op" value="+/-" name="bt" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" class="btn" value="4" name="bt" />
                    </td>
                    <td>
                        <input type="submit" class="btn" value="5" name="bt" />
                    </td>
                    <td>
                        <input type="submit" class="btn" value="6" name="bt" />
                    </td>
                    <td>
                        <input type="submit" class="btn op" value="x" name="bt" />
                    </td>
                    <td>
                        <input type="submit" class="btn op" value="C" name="bt" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" class="btn" value="1" name="bt" />
                    </td>
                    <td>
                        <input type="submit" class="btn" value="2" name="bt" />
                    </td>
                    <td>
                        <input type="submit" class="btn" value="3" name="bt" />
                    </td>
                    <td>
                        <input type="submit" class="btn op" value="-" name="bt" />
                    </td>
                    <td rowspan="2">
                        <input type="submit" id="btnig" class="btn" value="=" name="bt" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="submit" class="btn" value="0" name="bt" />
                    </td>
                    <td>
                        <input type="submit" class="btn op" value="," name="bt" />
                    </td>
                    <td>
                        <input type="submit" class="btn op" value="+" name="bt" />
                    </td>
                </tr>
            </table>
        </form>


    </div>
</body>
</html>